extends layout

append head
  title Mocha Test-Runner

append stylesheets
  link(rel="stylesheet", href="stylesheets/mocha.css")

append javascripts
  script(type="text/javascript", src="javascripts/test_runner/mocha/mocha.js")
  if useBrowserify
    != "<script> function enableTests() {" + bundle + " };</script>"
  else
    - each test in bundle
      script(type="text/javascript", src="test/" + test)
  script(type="text/javascript", src="javascripts/test_runner/mocha/mocha.setup.js")
  script onload = function () { enableTests(); mocha.run(); };

append content
    div#mocha